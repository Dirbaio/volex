{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Volex",
  "scopeName": "source.volex",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.volex",
          "match": "//.*$"
        },
        {
          "name": "comment.block.volex",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.volex",
          "match": "\\b(struct|message|enum|union|service|fn|stream)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.volex",
          "match": "\\b(bool|u8|u16|u32|u64|i8|i16|i32|i64|f32|f64|string)\\b"
        },
        {
          "name": "entity.name.type.volex",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.volex",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.volex",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.volex",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.volex",
          "match": "(->|=|\\?|:)"
        },
        {
          "name": "punctuation.brackets.volex",
          "match": "[\\[\\]{}()]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.volex",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
